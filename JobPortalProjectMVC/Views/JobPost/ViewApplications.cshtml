<!-- Index.cshtml (for JobApplications) -->
@model IEnumerable<JobPortalProjectMVC.Models.JobApplication>

@{
    ViewData["Title"] = "Job Applications";
}

<h1>Job Applications</h1>

<table class="table">
    <thead>
        <tr>
            <th>Application Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Applied Date</th>
            <th>Cover Letter</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ApplicationId</td>
                <td>@item.User.FullName</td>
                <td>@item.User.Email</td>
                <td>@item.AppliedDate</td>
                <td>@item.CoverLetter</td>
                <td>
                    <a asp-action="RemoveApplication" asp-route-id="@item.ApplicationId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this application?')">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
