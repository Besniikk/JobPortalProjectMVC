<!-- Index.cshtml (for JobApplications) -->
@model IEnumerable<JobPortalProjectMVC.Models.JobApplication>

@{
    ViewData["Title"] = "Job Applications";
}

<h1>Job Applications</h1>

<table class="table">
    <thead>
        <tr>
            <th>Application Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Applied Date</th>
            <th>Cover Letter</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ApplicationId</td>
                <td>@item.User.FullName</td> <!-- Assuming User class has a UserName property -->
                <td>@item.User.Email</td> <!-- Assuming User class has an Email property -->
                <td>@item.AppliedDate</td>
                <td>@item.CoverLetter</td>
            </tr>
        }
    </tbody>
</table>
