@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="privacy-policy">
    <div class="container py-5">
        <h1 class="text-center fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted text-center mb-5">Your trust is important to us. Here's how we handle your information.</p>

        <!-- Introduction Section -->
        <section class="mb-5">
            <h2 class="fw-bold">Introduction</h2>
            <p>
                Welcome to Job Portal. This Privacy Policy explains how we collect, use, disclose, and protect your personal information
                when you use our platform. By using our services, you agree to the practices described in this policy.
            </p>
        </section>

        <!-- Information Collection Section -->
        <section class="mb-5">
            <h2 class="fw-bold">Information We Collect</h2>
            <ul class="list-unstyled">
                <li><i class="bi bi-check-circle-fill text-primary"></i> <strong>Personal Information:</strong> Name, email, phone number, address, etc.</li>
                <li><i class="bi bi-check-circle-fill text-primary"></i> <strong>Job Preferences:</strong> Desired roles, locations, and salary expectations.</li>
                <li><i class="bi bi-check-circle-fill text-primary"></i> <strong>Usage Data:</strong> Pages visited, features used, and other activity data.</li>
            </ul>
        </section>

        <!-- Use of Information Section -->
        <section class="mb-5">
            <h2 class="fw-bold">How We Use Your Information</h2>
            <p>We use the collected information to:</p>
            <ul>
                <li>Provide and improve our services.</li>
                <li>Match job seekers with relevant job postings.</li>
                <li>Communicate with users regarding updates, promotions, or issues.</li>
                <li>Ensure the safety and security of our platform.</li>
            </ul>
        </section>

        <!-- Sharing Information Section -->
        <section class="mb-5">
            <h2 class="fw-bold">Sharing Your Information</h2>
            <p>
                We do not sell your personal data. However, we may share your information with trusted partners such as:
            </p>
            <ul>
                <li>Employers for job applications and recruitment purposes.</li>
                <li>Service providers who assist in delivering our services.</li>
                <li>Authorities, when required by law.</li>
            </ul>
        </section>

        <!-- Data Security Section -->
        <section class="mb-5">
            <h2 class="fw-bold">Data Security</h2>
            <p>
                We implement industry-standard measures to protect your information from unauthorized access, disclosure, alteration, or destruction.
                However, no system is 100% secure, and we encourage users to take their own precautions as well.
            </p>
        </section>

        <!-- User Rights Section -->
        <section class="mb-5">
            <h2 class="fw-bold">Your Rights</h2>
            <p>You have the right to:</p>
            <ul>
                <li>Access and update your personal information.</li>
                <li>Request the deletion of your data.</li>
                <li>Opt out of promotional communications.</li>
            </ul>
        </section>

        <!-- Contact Us Section -->
        <section class="mb-5">
            <h2 class="fw-bold">Contact Us</h2>
            <p>
                If you have any questions or concerns about this Privacy Policy, please contact us at:
            </p>
            <p><strong>Email:</strong> support@jobportal.com</p>
            <p><strong>Phone:</strong> 044123456</p>
        </section>
    </div>

    <!-- Footer -->
    <footer class="py-4 bg-dark text-white text-center">
        <div class="container">
            <p>© 2024 Job Portal. All Rights Reserved.</p>
        </div>
    </footer>
</div>
